<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/game_background"
        >

    <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 점수 : 0"
            android:textSize="20sp"
            android:layout_gravity="top|left"
            />

    <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 시간 : 0"
            android:textSize="20sp"
            android:layout_gravity="top|right"

            />

    <LinearLayout
            android:id="@+id/targetView"
            android:layout_marginTop="100px"
            android:layout_width="910px"
            android:layout_height="910px"
            android:background="#8A2908"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20px"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon0"
                        />
            </LinearLayout>



            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon1"
                        />
            </LinearLayout>



            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon2"
                        />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon3"
                        />
            </LinearLayout>



            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon4"
                        />
            </LinearLayout>



            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon5"
                        />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <LinearLayout
                    android:layout_width="270px"
                    android:layout_height="270px"
                    android:background="#2A120A"
                    android:layout_margin="10px"
                    >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/balloon"
                        android:id="@+id/balloon6"
                        />
            </LinearLayout>



