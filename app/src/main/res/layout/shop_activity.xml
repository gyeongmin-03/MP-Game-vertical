<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/tabhost"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:id="@android:id/tabcontent"
                    >

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/backgroundShop"
                        android:background="@drawable/game_background1"
                        >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:background="#bb808080"
                            >


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/game_background1"
                                    android:id="@+id/back1"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="visible"
                                    android:id="@+id/backCheck1"
                                    />
                        </FrameLayout>


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/game_background2"
                                    android:id="@+id/back2"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="invisible"
                                    android:id="@+id/backCheck2"
                                    />

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/backLock2"
                                    >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_lock"
                                        android:padding="20dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50\n코인"
                                        android:layout_gravity="center"
                                        android:textColor="@color/yellow"
                                        android:textSize="20sp"
                                        android:paddingTop="20dp"
                                        android:gravity="center"
                                        />
                            </FrameLayout>
                        </FrameLayout>


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/game_background3"
                                    android:id="@+id/back3"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="invisible"
                                    android:id="@+id/backCheck3"
                                    />
                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/backLock3"
                                    >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_lock"
                                        android:padding="20dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="100\n코인"
                                        android:layout_gravity="center"
                                        android:textColor="@color/yellow"
                                        android:textSize="20sp"
                                        android:paddingTop="20dp"
                                        android:gravity="center"
                                        />
                            </FrameLayout>
                        </FrameLayout>

                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dartShop"
                        >

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#bb808080"
                            android:layout_gravity="bottom"
                            >


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/dart1"
                                    android:id="@+id/dart1"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="visible"
                                    android:id="@+id/dartCheck1"
                                    />
                        </FrameLayout>


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/dart2"
                                    android:id="@+id/dart2"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="invisible"
                                    android:id="@+id/dartCheck2"
                                    />

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/dartLock2"
                                    >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_lock"
                                        android:padding="20dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50\n코인"
                                        android:layout_gravity="center"
                                        android:textColor="@color/yellow"
                                        android:textSize="20sp"
                                        android:paddingTop="20dp"
                                        android:gravity="center"
                                        />
                            </FrameLayout>
                        </FrameLayout>


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/dart3"
                                    android:id="@+id/dart3"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="invisible"
                                    android:id="@+id/dartCheck3"
                                    />

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/dartLock3"
                                    >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_lock"
                                        android:padding="20dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="100\n코인"
                                        android:layout_gravity="center"
                                        android:textColor="@color/yellow"
                                        android:textSize="20sp"
                                        android:paddingTop="20dp"
                                        android:gravity="center"
                                        />
                            </FrameLayout>
                        </FrameLayout>

                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/balloonShop"
                        >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:background="#bb808080"
                            >


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/balloon1"
                                    android:id="@+id/balloon1"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="visible"
                                    android:id="@+id/balloonCheck1"
                                    />
                        </FrameLayout>


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/balloon2"
                                    android:id="@+id/balloon2"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="invisible"
                                    android:id="@+id/balloonCheck2"
                                    />

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/balloonLock2"
                                    >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_lock"
                                        android:padding="20dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50\n코인"
                                        android:layout_gravity="center"
                                        android:textColor="@color/yellow"
                                        android:textSize="20sp"
                                        android:paddingTop="20dp"
                                        android:gravity="center"
                                        />
                            </FrameLayout>
                        </FrameLayout>


                        <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                >
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/balloon3"
                                    android:id="@+id/balloon3"
                                    />
                            <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/check"
                                    android:visibility="invisible"
                                    android:id="@+id/balloonCheck3"
                                    />

                            <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/balloonLock3"
                                    >
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_lock"
                                        android:padding="20dp"
                                        />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="100\n코인"
                                        android:layout_gravity="center"
                                        android:textColor="@color/yellow"
                                        android:textSize="20sp"
                                        android:paddingTop="20dp"
                                        android:gravity="center"
                                        />
                            </FrameLayout>
                        </FrameLayout>

                    </LinearLayout>


                </FrameLayout>

            </FrameLayout>

            <TabWidget
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@android:id/tabs">
            </TabWidget>
        </LinearLayout>
    </TabHost>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장 및 나가기"
            android:textSize="20sp"
            android:layout_gravity="top|left"
            android:id="@+id/btnClose"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 코인 : 0"
            android:background="#D5D5D5"
            android:textColor="@color/black"
            android:layout_gravity="top|right"
            android:id="@+id/shopCoin"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            />

</FrameLayout>